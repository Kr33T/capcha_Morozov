<Window x:Class="capcha_Morozov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:capcha_Morozov"
        mc:Ignorable="d"
        Title="Авторизация" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Авторизация" Grid.Row="0" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1">
            <GroupBox Header="Логин" Width="200">
                <TextBox Name="loginTB"  Height="26"/>
            </GroupBox>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <GroupBox Header="Пароль" Width="200">
                <PasswordBox Name="passwordTB" Height="26"/>
            </GroupBox>
        </StackPanel>

        <Button Name="authBTN" Click="authBTN_Click" Grid.Row="3" Width="200" Height="26" Content="Авторизироваться"/>

    </Grid>
</Window>
