<Window x:Class="capcha_Morozov.enteringCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:capcha_Morozov"
        mc:Ignorable="d"
        Title="Ввод кода" Height="150" Width="250" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите код" FontSize="16" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBox Name="codeTB" Grid.Row="1" Width="200" Height="25" TextChanged="codeTB_TextChanged"/>

        <TextBlock Name="timer" Text="Осталось 10 секунд!" FontSize="16" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2"/>

    </Grid>
</Window>
