<Window x:Class="capcha_Morozov.showCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:capcha_Morozov"
        mc:Ignorable="d"
        Title="showCode" Height="220" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="НЕ ТОРОПИТЕСЬ!" Foreground="Red" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock Grid.Row="1" Text="Чтобы успешно авторизироваться необходимо запомнить код, указанный ниже и ввести его в следующем окне" TextAlignment="Center" TextWrapping="Wrap" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock Foreground="Red" FontWeight="Bold" FontSize="18" Name="codeTB" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Name="enterBTN" Click="enterBTN_Click" Grid.Row="3" Content="ок" Width="100" Height="25"/>
    </Grid>
</Window>
